// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   String @id @default(uuid())
  name String

  username String @unique
  email    String @unique
  password String

  receivedMessages Message[] @relation(name: "received")
  sentMessages     Message[] @relation(name: "sent")

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Message {
  id   String  @id @default(uuid())
  text String?

  secret Boolean @default(true)

  from   User?   @relation(name: "received", fields: [fromId], references: [id])
  fromId String?

  to   User?   @relation(name: "sent", fields: [toId], references: [id])
  toId String?

  timestamp DateTime @db.Timestamptz() @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
